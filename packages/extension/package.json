{
  "name": "@resumewright/extension",
  "version": "0.2.0",
  "private": true,
  "type": "module",
  "description": "ResumeWright browser extension",
  "scripts": {
    "dev": "wxt",
    "dev:firefox": "wxt -b firefox",
    "build": "pnpm validate:wasm-types && wxt build",
    "build:firefox": "wxt build -b firefox",
    "build:wasm": "cd ../../ && cargo build --release --target wasm32-unknown-unknown && wasm-pack build --release --target web packages/rust-core/wasm-bridge",
    "validate:wasm-types": "node scripts/validate-wasm-types.mjs",
    "zip": "wxt zip",
    "zip:firefox": "wxt zip -b firefox",
    "postinstall": "wxt prepare",
    "preview": "wxt preview",
    "typecheck": "tsc --noEmit",
    "test": "pnpm test:ts",
    "test:all": "pnpm test:ts && pnpm test:e2e",
    "test:ts": "NODE_OPTIONS='--expose-gc --max-old-space-size=4096' vitest run",
    "test:watch": "NODE_OPTIONS='--expose-gc --max-old-space-size=4096' vitest",
    "test:coverage": "NODE_OPTIONS='--expose-gc --max-old-space-size=4096' vitest run --coverage",
    "test:unit": "NODE_OPTIONS='--expose-gc --max-old-space-size=4096' vitest run",
    "test:unit:watch": "NODE_OPTIONS='--expose-gc --max-old-space-size=4096' vitest",
    "test:unit:settings": "NODE_OPTIONS='--expose-gc --max-old-space-size=4096' vitest run --no-cache src/popup/components/__tests__/Settings",
    "test:clear-cache": "vitest --clearCache",
    "test:e2e": "playwright test tests/e2e",
    "test:e2e:file": "pnpm exec playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:report": "playwright show-report",
    "test:visual": "playwright test tests/visual",
    "test:visual:update": "playwright test tests/visual --update-snapshots",
    "test:performance": "playwright test tests/performance",
    "test:extension": "playwright test tests/e2e",
    "test:a11y": "playwright test tests/accessibility",
    "test:mutation": "stryker run",
    "lint": "biome lint",
    "format": "biome format --write",
    "check": "biome check",
    "check:fix": "biome check --write"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@webext-core/storage": "^1.2.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "transliteration": "^2.6.0",
    "use-debounce": "^10.0.6",
    "valibot": "^1.2.0",
    "zustand": "5.0.9"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@biomejs/biome": "^2.3.10",
    "@fast-check/vitest": "^0.2.4",
    "@playwright/test": "^1.57.0",
    "@sgohlke/stryker-log-ignorer": "^2.0.6",
    "@stryker-mutator/core": "^9.4.0",
    "@stryker-mutator/vitest-runner": "^9.4.0",
    "@tailwindcss/postcss": "^4.1.18",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "^4.0.16",
    "@webext-core/messaging": "^2.3.0",
    "autoprefixer": "^10.4.23",
    "axe-core": "^4.11.0",
    "babel-plugin-react-compiler": "^1.0.0",
    "fake-indexeddb": "^6.2.5",
    "happy-dom": "^20.0.11",
    "jest-axe": "^10.0.0",
    "pdf-lib": "^1.17.1",
    "postcss": "^8.4.32",
    "prettier": "^3.7.4",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "vite": "^7.3.0",
    "vite-plugin-wasm": "^3.3.0",
    "vitest": "^4.0.16"
  }
}
