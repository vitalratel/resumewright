{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2024", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Incremental compilation */
    "incremental": true,
    "tsBuildInfoFile": ".tsbuildinfo",

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Path aliases */
    "baseUrl": ".",
    "paths": {
      "@/background/*": ["src/background/*"],
      "@/popup/*": ["src/popup/*"],
      "@/shared/*": ["src/shared/*"],
      // @pkg points to WASM bindings generated by wasm-pack
      // Contains wasm_bridge.js, wasm_bridge_bg.wasm, and TypeScript definitions
      "@pkg/*": ["../rust-core/wasm-bridge/pkg/*"],
      "@rust/*": ["../rust-core/*"],
      "@tests/*": ["tests/*"]
    },

    /* Types */
    "types": ["vite/client", "vitest/globals", "@testing-library/jest-dom"]
  },
  "include": ["src", "tests", "entrypoints", ".wxt/wxt.d.ts"],
  "exclude": [
    "node_modules",
    "dist",
    // Manual test data excluded from type checking
    // Contains intentionally malformed TSX files for testing error handling:
    // - invalid-structure.tsx, invalid-syntax.tsx: Test parse error recovery
    // - runtime-error.tsx: Test runtime error detection
    // - large-file-*.tsx: Test file size limits (5MB, 11MB)
    // These files would cause TypeScript compilation errors by design
    "tests/manual/test-data"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
