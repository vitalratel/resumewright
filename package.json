{
  "name": "resumewright",
  "version": "0.1.0",
  "private": true,
  "description": "Export Claude-generated CVs to professional PDFs",
  "scripts": {
    "build:wasm": "wasm-pack build packages/rust-core/wasm-bridge --target web",
    "build:test-fixtures": "node scripts/transpile-fixtures.mjs",
    "dev": "pnpm build:wasm && pnpm --filter extension dev",
    "build": "pnpm build:wasm && pnpm --filter extension build",
    "typecheck": "pnpm --filter extension typecheck",
    "test:ts": "pnpm --filter extension test:ts",
    "test:rust": "cargo test --workspace",
    "test:wasm": "wasm-pack test packages/rust-core/wasm-bridge --headless --chrome --firefox",
    "test:e2e": "pnpm --filter extension test:e2e",
    "test:integration": "pnpm --filter extension test:integration",
    "test:performance": "pnpm --filter extension test:performance",
    "test:visual": "playwright test",
    "test:visual:update": "pnpm --filter extension test:visual:update",
    "lint": "pnpm --filter extension lint",
    "format": "pnpm --filter extension format",
    "validate:bundle": "node scripts/validate-bundle-size.js",
    "test:visual:headed": "playwright test --headed",
    "test:visual:ui": "playwright test --ui",
    "ci": "pnpm typecheck && pnpm lint && pnpm build && pnpm test:ts",
    "prepare": "husky"
  },
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=10.0.0"
  },
  "packageManager": "pnpm@10.24.0",
  "pnpm": {
    "overrides": {
      "glob": ">=10.5.0",
      "node-forge": ">=1.3.2"
    }
  },
  "lint-staged": {
    "packages/extension/{src,tests,entrypoints}/**/*.{ts,tsx,js,json}": [
      "pnpm --filter extension exec biome check --write --no-errors-on-unmatched"
    ],
    "packages/extension/**/*.css": [
      "prettier --write"
    ],
    "**/*.rs": [
      "bash -c 'cargo fmt -- --check'",
      "bash -c 'cargo clippy -- -D warnings'"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-react": "^7.28.5",
    "@babel/preset-typescript": "^7.28.5",
    "@playwright/test": "^1.57.0",
    "@swc/core": "^1.15.3",
    "@webext-core/fake-browser": "^1.3.2",
    "esbuild": "^0.27.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "pdf-to-png-converter": "^3.11.0",
    "pixelmatch": "^7.1.0",
    "pngjs": "^7.0.0",
    "wxt": "^0.20.11"
  }
}
